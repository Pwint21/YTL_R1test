<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <connectionStrings>
    <!-- SECURITY FIX: Secure connection string configuration -->
    <add name="sqlserverconnection" connectionString="Data Source=your_server;Initial Catalog=your_database;Integrated Security=True;Connection Timeout=30;Command Timeout=30;Encrypt=True;TrustServerCertificate=False;" />
  </connectionStrings>
  
  <appSettings>
    <!-- SECURITY FIX: Store connection string reference securely -->
    <add key="sqlserverconnection" value="sqlserverconnection" />
    
    <!-- SECURITY FIX: Security configuration -->
    <add key="SessionTimeout" value="30" />
    <add key="MaxLoginAttempts" value="5" />
    <add key="LockoutDuration" value="15" />
    <add key="EnableSecurityLogging" value="true" />
  </appSettings>
  
  <system.web>
    <!-- SECURITY FIX: Enhanced compilation settings -->
    <compilation debug="false" strict="true" explicit="true" targetFramework="4.5.1" tempDirectory="~/App_Data/Temp/" />
    <httpRuntime targetFramework="4.5.1" maxRequestLength="4096" executionTimeout="110" enableVersionHeader="false" requestValidationMode="4.5" />
    
    <!-- SECURITY FIX: Secure session configuration -->
    <sessionState 
      mode="InProc" 
      timeout="30" 
      cookieless="false" 
      cookieTimeout="30" 
      cookieName="ASP.NET_SessionId" 
      cookieRequireSSL="true" 
      cookieSameSite="Strict" 
      httpOnlyCookies="true" 
      regenerateExpiredSessionId="true"
      stateNetworkTimeout="600" />
    
    <!-- SECURITY FIX: Forms authentication configuration -->
    <authentication mode="Forms">
      <forms 
        loginUrl="login.aspx" 
        timeout="30" 
        requireSSL="true" 
        cookieless="false" 
        slidingExpiration="true" 
        cookieSameSite="Strict"
        protection="All"
        enableCrossAppRedirects="false" />
    </authentication>
    
    <!-- SECURITY FIX: Authorization rules -->
    <authorization>
      <allow users="*" />
    </authorization>
    
    <!-- SECURITY FIX: Custom error handling -->
    <customErrors mode="On" defaultRedirect="~/Error.aspx" redirectMode="ResponseRedirect">
      <error statusCode="400" redirect="~/BadRequest.aspx" />
      <error statusCode="401" redirect="~/Unauthorized.aspx" />
      <error statusCode="403" redirect="~/Forbidden.aspx" />
      <error statusCode="404" redirect="~/NotFound.aspx" />
      <error statusCode="500" redirect="~/Error.aspx" />
    </customErrors>
    
    <!-- SECURITY FIX: Disable debugging and tracing -->
    <trace enabled="false" requestLimit="0" localOnly="true" />
    <compilation debug="false" />
    
    <!-- SECURITY FIX: Enhanced page settings -->
    <pages 
      enableViewState="false" 
      enableViewStateMac="true" 
      viewStateEncryptionMode="Always" 
      validateRequest="true"
      controlRenderingCompatibilityVersion="4.0"
      clientIDMode="AutoID" />
    
    <!-- SECURITY FIX: Machine key for encryption -->
    <machineKey 
      validationKey="[Generate a 128-character hex string]"
      decryptionKey="[Generate a 48-character hex string]"
      validation="HMACSHA256" 
      decryption="AES" />
    
    <!-- SECURITY FIX: HTTP cookies configuration -->
    <httpCookies 
      httpOnlyCookies="true" 
      requireSSL="true" 
      lockItem="true"
      sameSite="Strict" />
    
    <!-- SECURITY FIX: Trust level -->
    <trust level="Full" />
    
    <!-- SECURITY FIX: Globalization -->
    <globalization 
      requestEncoding="utf-8" 
      responseEncoding="utf-8" 
      culture="auto" 
      uiCulture="auto" />
  </system.web>
  
  <!-- SECURITY FIX: Enhanced web server configuration -->
  <system.webServer>
    <!-- SECURITY FIX: Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains; preload" />
        <add name="Content-Security-Policy" value="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self'; frame-ancestors 'none';" />
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
        <add name="Permissions-Policy" value="geolocation=(self), microphone=(), camera=()" />
      </customHeaders>
      <redirectHeaders>
        <clear />
      </redirectHeaders>
    </httpProtocol>
    
    <!-- SECURITY FIX: Remove server information -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="4194304" maxUrl="4096" maxQueryString="2048" />
        <verbs>
          <add verb="TRACE" allowed="false" />
          <add verb="TRACK" allowed="false" />
        </verbs>
        <hiddenSegments>
          <add segment="bin" />
          <add segment="App_Code" />
          <add segment="App_Data" />
          <add segment="App_Browsers" />
        </hiddenSegments>
        <fileExtensions>
          <add fileExtension=".config" allowed="false" />
          <add fileExtension=".cs" allowed="false" />
          <add fileExtension=".vb" allowed="false" />
        </fileExtensions>
      </requestFiltering>
    </security>
    
    <!-- SECURITY FIX: HTTPS redirection -->
    <rewrite>
      <rules>
        <rule name="Redirect to HTTPS" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
            <add input="{HTTP_HOST}" pattern="localhost" negate="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:0}" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- SECURITY FIX: Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="login.aspx" />
        <add value="default.aspx" />
      </files>
    </defaultDocument>
    
    <!-- SECURITY FIX: Static content caching -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00" />
    </staticContent>
    
    <!-- SECURITY FIX: URL compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    
    <!-- SECURITY FIX: HTTP errors -->
    <httpErrors errorMode="Custom" defaultResponseMode="Redirect">
      <remove statusCode="400" />
      <remove statusCode="401" />
      <remove statusCode="403" />
      <remove statusCode="404" />
      <remove statusCode="500" />
      <error statusCode="400" responseMode="Redirect" path="/BadRequest.aspx" />
      <error statusCode="401" responseMode="Redirect" path="/Unauthorized.aspx" />
      <error statusCode="403" responseMode="Redirect" path="/Forbidden.aspx" />
      <error statusCode="404" responseMode="Redirect" path="/NotFound.aspx" />
      <error statusCode="500" responseMode="Redirect" path="/Error.aspx" />
    </httpErrors>
  </system.webServer>
  
  <system.codedom>
    <compilers>
      <compiler language="c#;cs;csharp" extension=".cs" type="Microsoft.CodeDom.Providers.DotNetCompilerPlatform.CSharpCodeProvider, Microsoft.CodeDom.Providers.DotNetCompilerPlatform, Version=2.0.1.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" warningLevel="4" compilerOptions="/langversion:6 /nowarn:1659;1699;1701" />
      <compiler language="vb;vbs;visualbasic;vbscript" extension=".vb" type="Microsoft.CodeDom.Providers.DotNetCompilerPlatform.VBCodeProvider, Microsoft.CodeDom.Providers.DotNetCompilerPlatform, Version=2.0.1.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" warningLevel="4" compilerOptions="/langversion:14 /nowarn:41008 /define:_MYTYPE=\"Web\" /optionInfer+" />
    </compilers>
  </system.codedom>
</configuration>